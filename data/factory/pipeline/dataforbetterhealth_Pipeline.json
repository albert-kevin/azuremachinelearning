{
	"name": "dataforbetterhealth_Pipeline",
	"properties": {
		"description": "exercise for collecting data\nas was done on a hackathon at Digityser 2019\nsee if we can collect all resources and clean the data faster and more easy and with higher quality for further use with ML tools",
		"activities": [
			{
				"name": "SFTP_to_Blob",
				"description": "copy data from the FTP server to BlobStorage",
				"type": "Copy",
				"dependsOn": [],
				"policy": {
					"timeout": "7.00:00:00",
					"retry": 0,
					"retryIntervalInSeconds": 30,
					"secureOutput": false,
					"secureInput": false
				},
				"userProperties": [],
				"typeProperties": {
					"source": {
						"type": "BinarySource",
						"storeSettings": {
							"type": "SftpReadSettings",
							"recursive": false
						}
					},
					"sink": {
						"type": "BinarySink",
						"storeSettings": {
							"type": "AzureBlobStorageWriteSettings"
						}
					},
					"enableStaging": false
				},
				"inputs": [
					{
						"referenceName": "binaryFile_DocPH_on_SFTP",
						"type": "DatasetReference"
					}
				],
				"outputs": [
					{
						"referenceName": "binaryFile_DocPH_on_blobStore",
						"type": "DatasetReference"
					}
				]
			},
			{
				"name": "SFTP_to_Blob_schema",
				"description": "copy data from the FTP server to BlobStorage",
				"type": "Copy",
				"dependsOn": [],
				"policy": {
					"timeout": "7.00:00:00",
					"retry": 0,
					"retryIntervalInSeconds": 30,
					"secureOutput": false,
					"secureInput": false
				},
				"userProperties": [],
				"typeProperties": {
					"source": {
						"type": "DelimitedTextSource",
						"storeSettings": {
							"type": "SftpReadSettings",
							"recursive": true
						},
						"formatSettings": {
							"type": "DelimitedTextReadSettings"
						}
					},
					"sink": {
						"type": "DelimitedTextSink",
						"storeSettings": {
							"type": "AzureBlobStorageWriteSettings"
						},
						"formatSettings": {
							"type": "DelimitedTextWriteSettings",
							"quoteAllText": true,
							"fileExtension": ".txt"
						}
					},
					"enableStaging": false,
					"translator": {
						"type": "TabularTranslator",
						"mappings": [
							{
								"source": {
									"name": "account_yy_ss",
									"type": "Int32"
								},
								"sink": {
									"name": "accountYear",
									"type": "Int32"
								}
							},
							{
								"source": {
									"name": "province",
									"type": "String"
								},
								"sink": {
									"name": "province",
									"type": "String"
								}
							}
						]
					}
				},
				"inputs": [
					{
						"referenceName": "DelimitedText_from_SFTP",
						"type": "DatasetReference"
					}
				],
				"outputs": [
					{
						"referenceName": "DelimitedText_to_Blobstorage_schema",
						"type": "DatasetReference"
					}
				]
			}
		],
		"annotations": []
	}
}